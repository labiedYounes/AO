{% extends '::base.html.twig' %}

{% block body -%}
    <h1>appel list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Objet</th>
                <th>Description</th>
                <th>Type</th>
                <th>Passation</th>
                <th>Attestation</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Typemarche</th>
                <th>Datelimit</th>
                <th>Lieuxdepot</th>
                <th>Appeldebug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('appel_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.objet }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.passation }}</td>
                <td>{{ entity.attestation }}</td>
                <td>{{ entity.cp }}</td>
                <td>{{ entity.ville }}</td>
                <td>{{ entity.typeMarche }}</td>
                <td>{% if entity.dateLimit %}{{ entity.dateLimit|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.lieuxDepot }}</td>
                <td>{{ entity.appelDebug }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('appel_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('appel_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('appel_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
