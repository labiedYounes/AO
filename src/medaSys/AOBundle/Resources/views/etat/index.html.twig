{% extends '::base.html.twig' %}

{% block body -%}
    <h1>etat list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Valuesarray</th>
                <th>Ordernum</th>
                <th>Displayedstring</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('etat_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.ref }}</td>
                <td>{{ entity.valuesArray }}</td>
                <td>{{ entity.orderNum }}</td>
                <td>{{ entity.displayedString }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('etat_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('etat_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('etat_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
